<form class="create-form p-4 mt-4"
      action="/military-units/<%= militaryUnitId %>/units/<%= unitId %>/servicemans/<%= serviceman._id %>/edit"
      method="post">
    <div>
        <label for="last_name">Прізвище:</label><br>
        <input id="last_name"
               class="input"
               value="<%= serviceman.last_name %>"
               name="last_name"
               required minlength="3" maxlength="15" autofocus
               type="text"
               placeholder="Шевченко">
    </div>

    <div>
        <label for="first_name">Ім'я:</label><br>
        <input id="first_name"
               class="input"
               value="<%= serviceman.first_name %>"
               name="first_name"
               required minlength="2" maxlength="15"
               type="text"
               placeholder="Олександр">
    </div>

    <div>
        <label for="middle_name">По батькові:</label><br>
        <input id="middle_name"
               class="input"
               value="<%= serviceman.middle_name %>"
               name="middle_name"
               required minlength="5" maxlength="15"
               type="text"
               placeholder="Олександрович">
    </div>

    <div>
        <label for="birth_date">Дата народження:</label><br>
        <input id="birth_date"
               class="input"
               value="<%= serviceman.birth_date %>"
               name="birth_date"
               required minlength="10" maxlength="10"
               type="text"
               placeholder="2023-01-01">
    </div>

    <div>
        <label for="rank">Військове звання:</label><br>
        <input id="rank"
               class="input"
               value="<%= serviceman.rank %>"
               name="rank"
               required minlength="4" maxlength="20"
               type="text"
               placeholder="солдат">
    </div>

    <div>
        <label for="position">Посада:</label><br>
        <input id="position"
               class="input"
               value="<%= serviceman.position %>"
               name="position"
               required minlength="3"
               type="text"
               placeholder="курсант">
    </div>

    <input type="hidden" id="url" name="url">

    <input type="submit" class="button button-add" value="Редагувати">
    <input type="button" class="button button-back" value="Назад" onclick="history.back();">
</form>

<script src="/public/js/Serviceman/validateForm.js"></script>
<script>
    const url = document.getElementById("url");
    url.value = document.referrer;
</script>